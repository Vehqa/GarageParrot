{% extends 'base.html.twig' %}

{% block title %}V.Parrot Contact{% endblock %}

{% block body %}
<main>
    <div class="contact">
        </div>
            <form class="contact__form" action="/contact" method="POST">
                <h1 class="contact__title">Formulaire de Contact</h1>
                {% for message in app.flashes('success_mess') %}
                <div class="alert2 alert-success">
                    {{ message }}
                </div>
                {% endfor %}
                <input class="contact__input" type="text" placeholder="Prénom" name="name" required="required">
                <input class="contact__input" type="email" placeholder="E-Mail" name="email" required="required">
                <label for="message" class="contact__label">Message :</label>
                <textarea class="contact__textarea" name="message" id="message" required>{{ title ? "Bonjour, je suis intéressé(e) par l'annonce : " ~ title : '' }}</textarea>
                <input class="btn__2" type="submit" id='submit' value='Envoyer' >
            </form>
    <hr class="separation">
</main>
{% endblock %}
